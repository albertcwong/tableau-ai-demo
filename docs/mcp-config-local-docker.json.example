{
  "mcpServers": {
    "tableau-analyst-agent": {
      "command": "/absolute/path/to/tableau-ai-demo/backend/venv/bin/python",
      "args": [
        "-m",
        "mcp_server.server"
      ],
      "env": {
        "PYTHONPATH": "/absolute/path/to/tableau-ai-demo/backend",
        "DATABASE_URL": "postgresql://postgres:postgres@localhost:5432/tableau_demo",
        "REDIS_URL": "redis://localhost:6379/0",
        "MCP_SERVER_NAME": "tableau-ai-demo-mcp",
        "MCP_TRANSPORT": "stdio",
        "MCP_LOG_LEVEL": "info",
        "GATEWAY_BASE_URL": "http://localhost:8000/api/v1/gateway"
      }
    }
  }
}
